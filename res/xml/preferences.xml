        <PreferenceCategory android:title="@string/filter_external_data" android:summary="@string/filter_external_data_summ">
            <CheckBoxPreference
                    android:title="@string/filter_google_translate"
                    android:summary="@string/filter_google_translate_summ"
                    android:defaultValue="false"
                    android:key="com.ichi2.filters.GoogleTranslaterFilter"/>
        </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_cat_tibetan">
        <CheckBoxPreference android:title="@string/pref_enable_tibetan" android:key="enableTibetan"/>
    </PreferenceCategory>
